---
interface Props {
  isContact: boolean;
}

const { isContact } = Astro.props;
---

<h2 class=`contact-wrapper ${isContact ? 'contact' : ''}`>
  <span class="contact-span">Let's work together.</span>
  <a href="/" class="contact-a">Get in touch.</a>
</h2>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  import { slowEase } from "@utils/animations";

  gsap.registerPlugin(ScrollTrigger);
  gsap.fromTo(
    ".contact-span",
    {
      y: 75,
      opacity: 0,
    },
    {
      scrollTrigger: ".contact-wrapper",
      y: 0,
      opacity: 1,
      duration: 0.7,
      ease: slowEase,
    }
  );

  gsap.fromTo(
    ".contact-a",
    {
      y: 75,
      opacity: 0,
    },
    {
      scrollTrigger: ".contact-wrapper",
      y: 0,
      delay: 0.075,
      opacity: 1,
      duration: 0.7,
      ease: slowEase,
    }
  );
</script>

<style>
  :root {
    --font-size-mobile: 1.875rem;
    --font-size-desktop: 2.375rem;
  }

  .contact {
    font-size: 2.5rem;
    margin-top: auto;
    margin-bottom: auto;
    font-weight: bold;
  }

  .contact-wrapper {
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: center;
    min-height: 300px;
    padding: 5rem;
    font-weight: 400;
    letter-spacing: var(--letter-spacing-default);

    a {
      cursor: pointer;
      color: var(--clr-accent-300);
      &:hover {
        opacity: 0.5;
      }
    }
  }

  @media (min-width: 800px) {
    .contact-wrapper {
      font-size: var(--font-size-desktop);
      min-height: 375px;
    }

    .contact {
      font-size: clamp(1.5rem, 5vw + 1rem, 5rem);
      line-height: clamp(1.5rem, 5vw + 1.25rem, 5.25rem);
    }
  }
</style>
