---
interface Props {
  text: string;
}

const { text } = Astro.props;
---

<div class="wrapper">
  <h1 class="hero-text">{text}</h1>
  <slot />
</div>

<script>
  import { slideIn } from "@utils/animations";
  slideIn(".hero-text");
</script>

<style>
  .wrapper {
    padding: var(--spacing-lg);
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 50vh;
    flex-direction: column;
    gap: 2rem;
  }

  h1 {
    font-size: clamp(1.5rem, 5vw + 1rem, 4rem);
    line-height: clamp(1.5rem, 5vw + 1.5rem, 4.5rem);
    font-weight: 500;
  }

  @media (min-width: 800px) {
    .wrapper {
      height: 70vh;
    }
    h1 {
      max-width: 40vw;
    }
  }
</style>
